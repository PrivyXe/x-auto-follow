{
  "manifest_version": 3,
  "name": "Twitter Comment Followers",
  "version": "0.0.1",
  "description": "Auto-follow commenters under a Twitter post (for demo purposes).",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Twitter Comment Followers",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["report.html", "report.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

